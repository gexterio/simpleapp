<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.simpleapp.Controller">
    <padding>
        <Insets bottom="10" left="10" right="10" top="20"/>
    </padding>
    <TextArea fx:id="historyArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox spacing="20">
        <TextField fx:id="inputArea" HBox.hgrow="ALWAYS" promptText="enter your numbers"/>
        <Button text="Check" defaultButton="true" onAction="#clickCheckBtn"/>
    </HBox>
</VBox>
